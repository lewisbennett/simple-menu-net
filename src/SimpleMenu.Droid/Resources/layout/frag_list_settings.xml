<SimpleMenu.Droid.Views.ElevationNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:id="@+id/nestedscrollview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <android.support.v7.widget.CardView
            style="@style/AppTheme.Widgets.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <SimpleMenu.Droid.Views.ElevationMvxRecyclerView
                style="@style/AppTheme.Widgets.Scrollable"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/accountsettingsrecyclerview"
	            app:MvxBind="ItemsSource AccountSettings; ItemClick ItemClickCommand" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/AppTheme.Widgets.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <SimpleMenu.Droid.Views.ElevationMvxRecyclerView
                style="@style/AppTheme.Widgets.Scrollable"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/configurationsettingsrecyclerview"
	            app:MvxBind="ItemsSource ConfigurationSettings; ItemClick ItemClickCommand" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/AppTheme.Widgets.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SimpleMenu.Droid.Views.ElevationMvxRecyclerView
                style="@style/AppTheme.Widgets.Scrollable"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/appsettingsrecyclerview"
	            app:MvxBind="ItemsSource AppSettings; ItemClick ItemClickCommand" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</SimpleMenu.Droid.Views.ElevationNestedScrollView>