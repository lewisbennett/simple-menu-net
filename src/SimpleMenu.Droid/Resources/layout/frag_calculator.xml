<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">
    <android.support.v7.widget.CardView
        style="@style/AppTheme.Widgets.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MvxBind="Click AddPictureButtonClickCommand">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:MvxBind="Hint FromUnitsHint">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    app:MvxBind="Text FromUnits" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.button.MaterialButton
                style="@style/AppTheme.Widgets.ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:MvxBind="Text FromMetricButtonText; Click FromMetricButtonClickCommand" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_sync"
        app:MvxBind="Click SwapButtonClickCommand" />
    <android.support.v7.widget.CardView
        style="@style/AppTheme.Widgets.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:MvxBind="Click AddPictureButtonClickCommand">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:MvxBind="Hint ToUnitsHint">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    app:MvxBind="Text ToUnits" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.button.MaterialButton
                style="@style/AppTheme.Widgets.ButtonSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:MvxBind="Text ToMetricButtonText; Click ToMetricButtonClickCommand" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>