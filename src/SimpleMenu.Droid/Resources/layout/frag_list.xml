<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
    <SimpleMenu.Droid.Views.ElevationMvxRecyclerView
        style="@style/AppTheme.Widgets.Scrollable"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/recyclerview"
        android:padding="10dp"
	    android:clipToPadding="false"
	    app:MvxBind="ItemsSource Data; ItemClick ItemClickCommand; ItemLongClick ItemLongClickCommand" />
    <include
        layout="@layout/frag_loading" />
</RelativeLayout>